@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4 custom-bg">
    <div class="text-center">
        <h1 class="display-4"><strong>Welcome to Employee Management System</strong></h1>
        <p class="lead mt-3" style="color: blue;">
            Streamline your organization's workflow by efficiently managing employee details, departments, and organizational records.
        </p>
    </div>

    <hr class="my-4">

    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">Add, view, and edit employee details easily.</p>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Manage Employees</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Department Management</h5>
                    <p class="card-text">Organize and manage company departments effectively.</p>
                    <a href="@Url.Action("Index", "Department")" class="btn btn-success">Manage Departments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p class="card-text">Learn more about our mission and vision to help organizations thrive.</p>
                    <a href="@Url.Action("AboutUs", "Home")" class="btn btn-warning">About Us</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <p class="text-muted">Empowering organizations with effective employee management tools.</p>
    </div>
</div>
