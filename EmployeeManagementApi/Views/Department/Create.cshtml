@model EmployeeManagementAPI.Models.Department

<style>
    /* Custom Container width */
    .container.custom-container {
        max-width: 80%; /* Increase width of the container */
        margin: 0 auto; /* Center the container */
    }

    /* Custom form input height */
    .form-control {
        height: 35px; /* Decrease the height of the input fields */
    }
</style>

<div class="container custom-container mt-4">
    <h2 class="text-center">Add New Department</h2>

    <form asp-action="Create" method="post">
        <!-- DepartmentName field -->
        <div class="form-group">
            <label asp-for="DepartmentName" class="font-weight-bold"></label>
            <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <!-- Location field -->
        <div class="form-group">
            <label asp-for="Location" class="font-weight-bold"></label>
            <input asp-for="Location" class="form-control" placeholder="Enter location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <!-- Submit button -->
        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <!-- Back to list button -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
